{
  "name": "electron-app",
  "version": "1.0.0",
  "description": "Shpion-Z0r Desktop Application",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "cross-env NODE_ENV=development concurrently \"npm:start-react\" \"npm:start-electron\"",
    "start-react": "cd ../frontend && npm start",
    "start-electron": "wait-on http://localhost:3000 && electron .",
    "build": "npm run build-react && electron-builder",
    "build-react": "cd ../frontend && npm run build",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac"
  },
  "author": "YourName",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^31.2.1",
    "electron-builder": "^25.1.8",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.shpion-z0r.desktop",
    "productName": "Shpion-Z0R",
    "files": [
      "main.js",
      "preload.js",
      "../frontend/build/**/*"
    ],
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": "dmg"
    }
  },
  "dependencies": {
    "electron-is-dev": "^3.0.1"
  }
}
