{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/out-tsc",
    "declaration": false,
    "types": ["node", "react"],
    "module": "esnext",
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "rootDir": "../../"
